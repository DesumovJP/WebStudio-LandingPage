# ============================================
# Strapi Backend - Environment Variables
# ============================================
# Скопіюй цей файл як .env для локальної розробки
# Для production на Railway додай ці змінні в Settings → Variables

# ============================================
# Environment
# ============================================
NODE_ENV=development
# Для production: NODE_ENV=production

# ============================================
# Database
# ============================================
# Development: SQLite (автоматично, якщо NODE_ENV=development)
# Production: PostgreSQL (встанови USE_POSTGRES=true)
USE_POSTGRES=false

# PostgreSQL (тільки для production)
# DATABASE_URL=postgresql://user:password@host:5432/database
# DATABASE_SSL=true

# ============================================
# Server
# ============================================
HOST=0.0.0.0
PORT=1337
# Для production на Railway: PORT=8080 (або залишити за замовчуванням)

# Public URL (для генерації абсолютних URL)
PUBLIC_URL=http://localhost:1337
# Для production: PUBLIC_URL=https://your-project.up.railway.app

# ============================================
# Strapi Secrets (згенеруй випадкові рядки)
# ============================================
# Генерація: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ADMIN_JWT_SECRET=your-admin-jwt-secret-here
APP_KEYS=secret1,secret2,secret3,secret4
API_TOKEN_SALT=your-api-token-salt-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here
JWT_SECRET=your-jwt-secret-here

# ============================================
# CORS (Frontend URLs)
# ============================================
# Development: автоматично localhost:3000
# Production: додай свій Vercel URL
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
